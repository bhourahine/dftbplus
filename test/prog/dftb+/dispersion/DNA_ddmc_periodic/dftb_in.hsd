# The choosen periodic boundary condition is artificial and serves only the
# testing of the dispersion and damped H interaction in periodic systems.
Geometry = GenFormat {
<<< "dna.gen"
}
Driver = {}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1e-5
  MaxSCCIterations = 100
  Filling = Fermi {
    Temperature [K] = 300
  }
  KPointsAndWeights {
    0.0 0.0 0.0  1.0
  }
  MaxAngularMomentum {
    O = "p"
    H = "s"
    N = "p"
    C = "p"
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
  Dispersion = dDMC {}
}

Options {
  WriteAutotestTag = Yes
  CalculateForces = No
}

ParserOptions {
  ParserVersion = 4
}
