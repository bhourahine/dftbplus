Driver = {}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-10 # abnormally tight tollerance used for accuracy
    MaxAngularMomentum = {
        C = "p"
        H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
        Temperature [Kelvin] = 273.15
    }
    SlaterKosterFiles = Type2FileNames {
        Separator = "-"
        Suffix = ".skf"
    }
    RangeSeparated = LC {
        Screening = NeighbourBased {}
    }
}

Options = {
    WriteAutotestTag = Yes
}

ParserOptions = {
    ParserVersion = 7
}

Analysis = {
    ElectronDynamics = {
        Steps = 1
        TimeStep [au] = 0.2
	Forces = Yes
        #Perturbation = Kick {
        #    PolarizationDirection = "y"
        #}
        #FieldStrength [v/a] = 0.001
    }
    CalculateForces = Yes
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
    # Due to small size of problem, allow 2 MPI processors by shrinking blocks
    Blacs = BlockSize {
        16
    }
}
