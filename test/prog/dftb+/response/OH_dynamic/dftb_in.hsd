Geometry = GenFormat {
  2 C
  O H
  1    1    0.00000000000E+00  -0.10000000000E+01   0.00000000000E+00
  2    2    0.00000000000E+00   0.00000000000E+00   0.78306400000E+00
}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-9  # Very small!
  
  MaxAngularMomentum {
    O = "p"
    H = "s"
  }
  
  Charge = 0.0
  
  SpinPolarisation = Colinear {
    # Sligtly break initial spin symmetry
    UnpairedElectrons = 0.01 
    RelaxTotalSpin = Yes
  }
  
  SpinConstants {
    O {
      -0.026
    }
    
    H {
      -0.064
    }
  }
  
  Filling = Fermi {
    Temperature [Kelvin] = 100
  }

  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
}

#ExcitedState {
#  Casida {
#      NrOfExcitations = 10
#      StateOfInterest = 0
#  }
#}

Analysis = {
  Polarisability = {
    Dynamic = {
      FrequencyRange [eV] = 9 .001 13
    }
  }
}

Options {
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 7
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
