geometry = genformat {
    2  C
 Au
    1 1    0.0000000000E+00    0.0000000000E+00    0.0000000000E+00
    2 1    0.1461739267E+01    0.1461739267E+01    0.1461739267E+01
}

Hamiltonian = Dftb {
    Scc = yes
    SccTolerance = 1e-10
    ShellResolvedSCC = Yes
    MaxAngularMomentum = {
        Au = d
    }
    Filling = Fermi {
        Temperature [K] = 500
    }
    SlaterKosterFiles = {
        Au-Au = "Au-Au.skf"
    }
    SpinOrbit = {
        Au [eV] = {0.0 0.5 1.5}
    }
}

Analysis{
    Polarisability = {
        Dynamic = {
            FrequencyRange [eV] = 0.0 0.05 3.0
        }
    }
}

Parallel = {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}

Options = {
    WriteAutotestTag = Yes
}

ParserOptions = {
    ParserVersion = 7
}
