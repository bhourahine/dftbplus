Geometry = GenFormat {
    3  C
  O  H
    1 1    0.1671030961E-24   -0.7261207162E+00    0.2373254279E-10
    2 2    0.3907699598E-15   -0.1369396419E+00    0.7830993070E+00
    3 2   -0.3907699600E-15   -0.1369396419E+00   -0.7830993070E+00
}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-8
  MaxAngularMomentum = {
    O = "p"
    H = "s"
  }
  Filling = Fermi {
    Temperature [Kelvin] = 10
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix  = ".skf"
  }
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 8
}

Analysis = {
  CoordDerivs = Yes
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
